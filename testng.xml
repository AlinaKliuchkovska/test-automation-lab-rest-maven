<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Rest">
    <test name="shouldBePassed" >
        <classes>
            <class name="rest.TestRest">
                <methods>
                    <include name="getAuthorByAuthorIdTest"/>
                </methods>
            </class>
        </classes>
